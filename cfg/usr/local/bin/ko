#!/usr/bin/env bash
#
# Upscale
set -e

usage() {
  echo "usage: ${0##*/} [-h] COMMAND"
  echo
  echo 'upscale'
  echo
  echo 'options:'
  echo '  -h  show this help message and exit'

  exit "${1}"
}

main() {
  local command="${@}"

  [[ "${@}" == '-h' ]] && usage 0
  ((${#} == 0)) && usage 1 >&2

  SDL_VIDEODRIVER='wayland' LD_PRELOAD='' gamescope -w640 -h360 -s0.5 -b \
    --rt --force-grab-cursor --backend=sdl \
    --sharpness=0 -S stretch -F nis -- ${command}
}

main "${@}"
