#!/usr/bin/env bash
#
# Upscale
set -e

if [[ "${@}" =~ '--help' ]]; then
  cat "${0}"
  exit 0
fi

# Example: ko 30 'pk r 3'

fps="${1}"
app="${2}"

SDL_VIDEODRIVER='wayland' LD_PRELOAD='' gamescope --expose-wayland \
  --force-grab-cursor -w 640 -h 360 -r "${fps}" -o 1 -b --backend sdl \
  -S stretch -F fsr -- ${app}
