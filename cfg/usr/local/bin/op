#!/usr/bin/env bash
#
# Openssh helper
set -e

if [[ "${@}" =~ '-h' ]]; then
  cat << 'EOF'
- OpenSSH helper
  Usage: op [options]
- Options:
  g  Generate ed25519 keys
  c  Copy keys to server via ssh
  u  Connect to the saved IP addr
- Example:
  op g
EOF

  exit 0
fi

addr() {
  if adb get-serialno; then
    adb exec-out ip a | grep 'inet.*wlan0$' \
      | cut -d ' ' -f6 | cut -d '/' -f1
  else
    local ip
    echo '- IP addr:'
    read -r addr
    echo "${ip}"
  fi
}

case "${1}" in
  g) ssh-keygen -t ed25519 -f "${HOME}/.ssh/id_ed25519";;
  c) ssh-copy-id -p8022 "$(addr)";;
  u)
    ip="$(grep -o -m1 '^\[.*\]' $HOME/.ssh/known_hosts | tr -d '[,]')"
    ssh -p8022 "${ip}";;
esac
