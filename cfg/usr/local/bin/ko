#!/usr/bin/env bash
#
# Upscale
set -e

usage() {
  echo "usage: ${0##*/} [-h] [COMMAND]"
  echo
  echo 'upscale'
  echo
  echo 'options:'
  echo '  -h  show this help message and exit'

  exit "${1}"
}

main() {
  local command="${@}"

  if [[ "${1}" =~ '-h' ]]; then
    usage 0
  elif ((${#} == 0)); then
    usage 1
  fi

  SDL_VIDEODRIVER='wayland' LD_PRELOAD='' gamescope -w640 -h360 -o1 -s0.5 -b \
    --rt --force-grab-cursor --backend=sdl -S stretch -F fsr -- ${command}
}

main "${@}"
