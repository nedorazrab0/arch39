// Micro's config

{
  "clipboard": "terminal",
  "diffgutter": true,
  "infobar": false,
  "parsecursor": true,
  "mouse": false,
  "scrollbar": true,
  "statusformatl": ">>> $(filename) $(modified)[$(line),$(col)] $(status.paste)| $(opt:fileformat)/$(opt:encoding)/$(opt:filetype)",
  "statusformatr": "micro ",
  "tabsize": 2,
  "tabstospaces": true,
  "*.py": {
    "tabsize": 4
  }
}
