#!/usr/bin/env bash
#
# Finish up the installation
set -e

usage() {
  echo "usage: ${0##*/} [-h]"
  echo
  echo 'finish up the installation'
  echo
  echo 'options:'
  echo '  -h  show this help message and exit'

  exit "${1}"
}

main() {
  if (($(id -u) == 0)); then
    echo '! Do not run this script as root'
    exit 1
  fi

  [[ "${@}" == '-h' ]] && usage 0
  ((${#} != 0)) && usage 1 >&2

  mkdir -p "${HOME}/"{atp,trash}
  gsettings set org.gnome.desktop.interface cursor-blink false
  gsettings set org.gnome.desktop.wm.preferences button-layout 'menu:'

  flatpak install flathub org.inkscape.Inkscape \
    org.onlyoffice.desktopeditors io.mpv.Mpv net.waterfox.waterfox \
    dev.vencord.Vesktop org.telegram.desktop --noninteractive
}

main "${@}"
