#!/usr/bin/env bash
#
# Mount a disk

set -e
blks="/dev/${2}*[0-9]*"

usage() {
  cat << EOF
- Use this script to mount your disks
  Usage: ${0##*/} [option] [disk]
- Options:
  s    Mount a SSD
  h    Mount a HDD
  u    Mount a thumb drive
  x    Detach a disk
- Mount path: "/run/dev/[disk]"
- Exampe:
  ${0##*/} u sdd
  ${0##*/} x sda
EOF

  exit "${1}"
}
  
[[ "${@}" =~ '--help' ]] && usage 0

if (( $(id -u) != 0 )); then
  echo '! Run this script as root'
  exit 1
fi

for blk in ${blks}; do
  fs="$(blkid -s TYPE -o value $blk)"
  case "${1}" in
    s)
      case "$fs" in
        btrfs) amo='nodiscard,ssd,compress=zstd:3';;
        f2fs) amo='nodiscard,compress_algorithm=zstd:3,compress_chksum';;
      esac
      ;;
    u)
      case "$fs" in
        btrfs) amo='nodiscard,ssd_spread,compress=zstd:3';;
        f2fs) amo='nodiscard,compress_algorithm=zstd:3,compress_chksum';;
        exfat|vfat) amo='noexec,nodev,nosuid,umask=0022';;
      esac
      ;;
    h) [[ "${fs}" == 'btrfs' ]] && amo='nossd,nodiscard,autodefrag,compress=zstd:6';;
    x) x='true';;
    *) usage 1;;
  esac

  if [[ -z "${x}" ]]; then
    mkdir -p "/run${blk}"
    mount --onlyonce -vo "noatime,lazytime,${amo}" "${blk}" "/run${blk}"
  else
    umount -v "${blk}"
  fi
done

if [[ -n "${x}" ]]; then
  echo '1' > "/sys/block/${2}/device/delete"
  rmdir "/run${blk}"
fi
