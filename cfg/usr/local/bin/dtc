#!/usr/bin/env bash
#
# Detach a thumb drive
set -e

usage() {
  echo "usage: ${0##*/} [-h] BLK"
  echo
  echo 'detach a thumb drive'
  echo
  echo 'options:'
  echo '  -h  show this help message and exit'

  exit "${1}"
}

main() {
  local blk="${@}"

  if (($(id -u) != 0)); then
    echo '! Run this script as root' >&2
    exit 1
  fi

  ((${#} == 0)) && usage 1 >&2
  [[ "${@}" == '-h' ]] && usage 0

  umount -l "/dev/${blk}"
  echo 1 > "/sys/block/${blk}/device/delete"
}
