#!/usr/bin/env bash
#
# Finish up the installation

set -e
path="${HOME}/.var/app/net.waterfox.waterfox/.waterfox"

flatpak install flathub org.telegram.desktop org.kde.krita \
  org.onlyoffice.desktopeditors net.waterfox.waterfox \
  io.mpv.Mpv com.transmissionbt.Transmission --noninteractive

# Firefox prof
rm -rf "${path}/"*
cp -Ta /usr/share/firefox-prof "${path}"
